@{
    Layout = "_Layout";
    ViewData["Title"] = "Edición de usuario";
}
<section class="container">
    <form class="for" action="/" method="post">
        <div class="form-text">
            <h2>Ingrese los datos de usuario</h2>
        </div>
        <div class="mb-3 mt-3">
            <label for="txtName" class="col-form-label">Nombre: </label>
            <input type="text" name="name" id="txtName" class="form-control" placeholder="Ingrese el nombre de usuario" />
        </div>
        <div class="mb-3 ">
            <label for="txtPassword" class="col-form-label">Contraseña: </label>
            <input type="password" id="txtPassword" class="form-control" placeholder="Ingrese la contraseña" />
        </div>
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>
</section>
